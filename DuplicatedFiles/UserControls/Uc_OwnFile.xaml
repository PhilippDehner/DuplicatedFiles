<UserControl x:Class="DuplicatedFiles.UserControls.Uc_OwnFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DuplicatedFiles.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="100" />
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<TextBlock Grid.Column="0" Text="Text: "/>
		<TextBlock Grid.Column="1" Text="{Binding Path=FileName}" />
		<!--<Image Margin="3" Grid.Column="1" Source="{Binding Path=FileName}"/>-->
		<!--<Button Grid.Column="2" Click="{Binding HelloWorldButton_Click}" Grid.Row="0" Grid.RowSpan="2" Width="25" Height="25" VerticalAlignment="Center" IsDefault="False" Content="X"/>-->
	</Grid>
</UserControl>
